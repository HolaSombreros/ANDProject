<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_layout"
    app:startDestination="@id/fragment_app_intro">

    <fragment
        android:id="@+id/fragment_add_recipe"
        android:name="com.group2.foodie.view.fragment.AddRecipeFragment"
        android:label="@string/title_add_recipe"
        tools:layout="@layout/fragment_add_recipe" />

    <fragment
        android:id="@+id/fragment_personal_recipes"
        android:name="com.group2.foodie.view.fragment.PersonalRecipesFragment"
        android:label="fragment_personal_recipes"
        tools:layout="@layout/fragment_personal_recipes" >
        <action
            android:id="@+id/action_fragment_personal_recipes_to_fragment_add_recipe"
            app:destination="@id/fragment_add_recipe" />
        <action
            android:id="@+id/action_fragment_personal_recipes_to_fragment_view_recipe"
            app:destination="@id/fragment_view_recipe" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.group2.foodie.view.fragment.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/fragment_app_intro"
        android:name="com.group2.foodie.view.fragment.AppIntroFragment"
        android:label="fragment_app_intro"
        tools:layout="@layout/fragment_app_intro" >
        <action
            android:id="@+id/action_fragment_app_intro_to_fragment_personal_recipes"
            app:destination="@id/fragment_personal_recipes" />
    </fragment>
    <fragment
        android:id="@+id/fragment_daily_recipe"
        android:name="com.group2.foodie.view.fragment.DailyRecipeFragment"
        android:label="fragment_daily_recipe2"
        tools:layout="@layout/fragment_daily_recipe" />
    <fragment
        android:id="@+id/fragment_my_followers"
        android:name="com.group2.foodie.view.fragment.MyFollowersFragment"
        android:label="fragment_my_followers"
        tools:layout="@layout/fragment_my_followers" />
    <fragment
        android:id="@+id/fragment_view_recipe"
        android:name="com.group2.foodie.view.fragment.ViewRecipeFragment"
        android:label="@string/title_add_recipe"
        tools:layout="@layout/fragment_view_recipe" />
</navigation>