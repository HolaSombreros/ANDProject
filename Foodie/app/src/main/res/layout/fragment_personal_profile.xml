<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group2.foodie.view.fragment.PersonalProfileFragment">

    <ScrollView
        android:id="@+id/personal_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/personal_scrollView"
        app:layout_anchorGravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="101dp"
                android:layout_height="105dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="28dp"
                android:src="@mipmap/ic_app_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="250dp"
                android:layout_height="53dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="@string/username"
                android:textAlignment="center"
                android:textColor="#4a148c"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/userProfilePicture"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/followersTxt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="@string/followers"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/followersDisplay"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/userProfilePicture"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

            <TextView
                android:id="@+id/followingTxt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:text="@string/following"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/followingDisplay"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

            <TextView
                android:id="@+id/followersDisplay"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:padding="1dp"
                android:paddingStart="5dp"
                android:text="0"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/followingTxt"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

            <TextView
                android:id="@+id/followingDisplay"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="52dp"
                android:padding="1dp"
                android:paddingStart="5dp"
                android:text="0"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <LinearLayout
                android:id="@+id/recipes_personal_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="144dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/recipeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Recipes"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="37dp"
                    tools:layout_editor_absoluteY="161dp" />

                <TextView
                    android:id="@+id/recipeDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="1dp"
                    android:paddingStart="5dp"
                    android:text="0"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fridge_personal_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="172dp"
                android:layout_marginTop="144dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/fridgeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Fridge"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="37dp"
                    tools:layout_editor_absoluteY="161dp" />

                <TextView
                    android:id="@+id/fridgeDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="1dp"
                    android:paddingStart="5dp"
                    android:text="0"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="232dp"
                android:text="@string/email_address"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/emailDisplay"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="232dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/emailTxt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/passwordTxt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="292dp"
                android:text="@string/password"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/passwordDisplay"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="292dp"
                android:inputType="textPassword"
                android:text="TextView"
                android:ellipsize="start"
                app:layout_constraintStart_toEndOf="@+id/passwordTxt"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>